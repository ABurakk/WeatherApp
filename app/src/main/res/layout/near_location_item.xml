<?xml version="1.0" encoding="UTF-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout android:foreground="?selectableItemBackground" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationName"
        app:layout_constraintStart_toStartOf="@+id/tvLocationName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="normal|italic"
        android:textSize="16sp"
        android:textColor="#D1D1D1"
        android:text="TextView"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        android:id="@+id/tvLocationDistance"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold" android:textSize="20sp"
        android:textColor="#D1D1D1"
        android:text="TextView"
        android:layout_marginTop="8dp"
        android:id="@+id/tvLocationName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationDistance"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/imgLine"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/item_line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>